{
  "pluginAlias": "HomebridgeIopool",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "iopool"
      },
      "token": {
        "title": "Token",
        "type": "string",
        "required": true,
        "placeholder": "Your iopool token",
        "description": "You can find your token in the iopool app."
      },
      "delay": {
        "title": "Refresh Delay (in min)",
        "type": "number",
        "required": true,
        "default": 10,
        "minimum": 1,
        "maximum": 60
      }
    }
  }
}